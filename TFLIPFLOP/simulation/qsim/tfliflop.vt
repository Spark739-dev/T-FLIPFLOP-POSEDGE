`timescale 1 ps/ 1 ps
module tfliflop_vlg_sample_tst(
	clk,
	t,
	sampler_tx
);
input  clk;
input  t;
output sampler_tx;

reg sample;
time current_time;
always @(clk or t)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module tfliflop_vlg_check_tst (
	q,
	qbar,
	sampler_rx
);
input  q;
input  qbar;
input sampler_rx;

reg  q_expected;
reg  qbar_expected;

reg  q_prev;
reg  qbar_prev;

reg  q_expected_prev;
reg  qbar_expected_prev;

reg  last_q_exp;
reg  last_qbar_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	q_prev = q;
	qbar_prev = qbar;
end

// update expected /o prevs

always @(trigger)
begin
	q_expected_prev = q_expected;
	qbar_expected_prev = qbar_expected;
end



// expected q
initial
begin
	q_expected = 1'bX;
end 

// expected qbar
initial
begin
	qbar_expected = 1'bX;
end 
// generate trigger
always @(q_expected or q or qbar_expected or qbar)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected q = %b | expected qbar = %b | ",q_expected_prev,qbar_expected_prev);
	$display("| real q = %b | real qbar = %b | ",q_prev,qbar_prev);
`endif
	if (
		( q_expected_prev !== 1'bx ) && ( q_prev !== q_expected_prev )
		&& ((q_expected_prev !== last_q_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port q :: @time = %t",  $realtime);
		$display ("     Expected value = %b", q_expected_prev);
		$display ("     Real value = %b", q_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_q_exp = q_expected_prev;
	end
	if (
		( qbar_expected_prev !== 1'bx ) && ( qbar_prev !== qbar_expected_prev )
		&& ((qbar_expected_prev !== last_qbar_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port qbar :: @time = %t",  $realtime);
		$display ("     Expected value = %b", qbar_expected_prev);
		$display ("     Real value = %b", qbar_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_qbar_exp = qbar_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

